#! /usr/bin/env bash

file=$(cat ~/.config/hypr/wallpaper)
theme=$(cat ~/.local/bin/theme-details | rg theme | awk '{print $2}' | rg light)

[[ $theme != "light" ]] && theme="light" || theme="dark"

matugen image "$file" -m "$theme"
echo "image: $file" >~/.local/bin/theme-details
echo "theme: $theme" >>~/.local/bin/theme-details
